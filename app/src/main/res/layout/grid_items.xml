<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/myshape"
    android:orientation="vertical"
    android:paddingBottom="10dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#ff8b8a8a"
            android:paddingLeft="10dp"
            android:layout_marginBottom="5dp"
            android:paddingRight="10dp">

            <TextView
                android:text="TextView"
                android:layout_height="wrap_content"
                android:id="@+id/gNombreEvento"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="18sp"
                android:ellipsize="marquee"
                android:textColor="#ffffffff"></TextView>
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salida:"
            android:id="@+id/textView"
            android:textSize="12dp"
            android:layout_marginRight="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22:00"
            android:id="@+id/gSalida"
            android:textSize="12dp"
            android:textColor="#ffc4c4c4"
            android:layout_marginRight="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Llegada:"
            android:id="@+id/textView2"
            android:textSize="12dp"
            android:layout_marginRight="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23:30"
            android:id="@+id/gLlegada"
            android:textSize="12dp"
            android:textColor="#ffc4c4c4" />

    </LinearLayout>

    <TextView
        android:layout_height="wrap_content"
        android:id="@+id/gFecha"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="12dp"
        android:ellipsize="marquee"
        android:text="TextView"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"></TextView>


</LinearLayout>